{{#each pets as |pet|}}
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <img class="card-img-top" src="{{pet.pet_image_url}}" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">{{pet.pet_name}}</h5>
        <p class="card-text">{{pet.pet_description}}</p>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <a href="/pets/{{pet.id}}" class="btn btn-sm btn-outline-secondary">View</a>
            <a href="/pets/{{pet.id}}/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
          </div>
          <small class="text-muted">{{pet.updatedAt}}</small>
        </div>
      </div>
    </div>
  </div>
{{else}}
  <div class="col-md-12">
    <div class="card mb-4 shadow-sm">
      <div class="card-body">
        {{!-- redirect to pet sign up? --}}
        <h5 class="card-title">No Pets</h5>
        <p class="card-text">You have no pets. <a href="/login">Add a pet</a> to get started.</p>
      </div>
    </div>
  </div>
{{/each}}